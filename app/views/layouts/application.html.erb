<!DOCTYPE html>
<html>
<head>
  <title>Habitat.co.uk</title>
  <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track' => true %>
  <%= javascript_include_tag 'application', 'data-turbolinks-track' => true %>
  <%= csrf_meta_tags %>
</head>
<body>
<header>
	<div id="logo">
		<%= image_tag("habitat-logo.png", :alt => "Habitat Logo") %>
	</div>
	<div id="search-signout">
		<% if current_user %>
			<div id="search-form">
				<%= render 'layouts/search_form' %>
			</div>
			<div id="signout">
				Logged in as <strong><%= current_user.regname %></strong> |
				<% if current_user.guest? %>

				<% else %>
					<%= link_to "Sign Out", logout_path %>
				<% end %>
			</div>
		<% else %>
			<div id="search-form"></div>
			<div id="signout "></div>
				<%= link_to new_user_path do %>
					Click here to register a <strong>My Habitat</strong> account.
				<% end %>
		<% end %>

</header>

<% if notice %>
	<div class="notification bar-style bar-thin" id="notice"><%= notice %></div>
<% end %>
<% if alert %>
	<div class="notification bar-style bar-thin" id="alert"><%= alert %></div>
<% end %>

<% unless current_page?(controller: 'welcome') %>
	<section>
	<%= user_menu %>
<% end %>

<%= yield %>

<% unless current_page?(controller: 'welcome') %>
	</section>
	<div id="footer-bar" class="bar-style bar-thin add-margin">
  <span>Habitat Landscapes</span>
</div>
<% end %>

<footer id="welcome-footer">
	Copyright Habitat Landscapes Ltd 2016 (c) All Rights Reserved
	<br>
	<span>Website handcrafted by Carl Goulding</span>
	<br>
	<%= image_tag("mini-logo.png", :alt => "Habitat Logo Image") %>
</footer>

</body>
</html>
